
<h2><%= t 'registration.headline_registration' %></h2>

<%= flash_notice %>

<% @user.password = @user.password_confirmation = nil %>

<!-- <%= error_messages_for :user %> -->
<% form_for :user, :url => users_path do |f| -%>
    <div><%= label_tag 'login', t('user.label_login') %><br/>
    <%= f.text_field :login %>
    <%= error_message_on :user, :login %></div>
    
    <div><%= label_tag 'email', t('user.label_email') %><br/>
    <%= f.text_field :email %>
    <%= error_message_on :user, :email %></div>
    
    <div><%= label_tag 'password', t('user.label_password') %><br/>
    <%= f.password_field :password %>
    <%= error_message_on :user, :password %></div>
    
    <div><%= label_tag 'password_confirmation', t('user.label_password_repeat') %><br/>
    <%= f.password_field :password_confirmation %>
    <%= error_message_on :user, :password_confirmation %></div>
    
    <p><%= submit_tag t('registration.btn_sign_up') %></p>
<% end -%>
